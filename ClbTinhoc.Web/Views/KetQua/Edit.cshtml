@model ClbTinhoc.Web.Models.KetQua

@{
    ViewData["Title"] = "Sửa kết quả";
}

<div class="container mt-4">
    <h1>Sửa kết quả học tập</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form id="editForm" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaKetQua" />
                <div class="form-group mb-3">
                    <label asp-for="MaSinhVien" class="control-label">Sinh viên</label>
                    <select asp-for="MaSinhVien" class="form-select select2" asp-items="ViewBag.MaSinhVien"></select>
                    <span asp-validation-for="MaSinhVien" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MaKhoaHoc" class="control-label">Khóa học</label>
                    <select asp-for="MaKhoaHoc" class="form-select select2" asp-items="ViewBag.MaKhoaHoc"></select>
                    <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DiemCuoiKy" class="control-label">Điểm cuối kỳ</label>
                    <input asp-for="DiemCuoiKy" class="form-control" type="number" step="0.1" min="0" max="10" />
                    <span asp-validation-for="DiemCuoiKy" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <button type="button" class="btn btn-primary" onclick="submitForm()">Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "-- Chọn --",
                allowClear: true,
                width: '100%'
            });
        });

        function submitForm() {
            var form = $('#editForm');
            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: form.serialize(),
                success: function (result) {
                    if (result.success) {
                        alert('Cập nhật điểm thành công!');
                        window.location.href = '/KetQua/Index';
                    } else {
                        alert('Có lỗi xảy ra: ' + result.message);
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi cập nhật điểm!');
                }
            });
        }
    </script>
}