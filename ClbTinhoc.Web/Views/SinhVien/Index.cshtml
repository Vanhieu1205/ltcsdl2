@model IEnumerable<ClbTinhoc.Web.Models.SinhVien>

@{
    ViewData["Title"] = "Danh sách sinh viên";
    var userRole = Context.Session.GetString("UserRole");
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang chủ - CLB Tin Học</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/home.css">
</head>

<div class="container">
    @await Html.PartialAsync("_Header")
</div>

<h1>Danh sách sinh viên</h1>

<div class="row mb-4">
    <div class="col-md-6">
        <form asp-action="Search" method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm sinh viên...">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Create" class="btn btn-success">Thêm mới</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaSinhVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LopSinhHoat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayThamGia)
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSinhVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LopSinhHoat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayThamGia)
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.MaSinhVien" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaSinhVien" class="btn btn-sm btn-danger">Xóa</a>

                    <a asp-action="Details" asp-route-id="@item.MaSinhVien" class="btn btn-sm btn-info">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>