@model ClbTinhoc.Web.Models.KhoaHoc

@{
    ViewData["Title"] = "Thêm khóa học mới";
}

<h1>Thêm khóa học mới</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="TenKhoaHoc" class="control-label">Tên khóa học</label>
                <input asp-for="TenKhoaHoc" class="form-control" required />
                <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MoTa" class="control-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NgayBatDau" class="control-label">Ngày bắt đầu</label>
                <input asp-for="NgayBatDau" class="form-control" type="date" required />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NgayKetThuc" class="control-label">Ngày kết thúc</label>
                <input asp-for="NgayKetThuc" class="form-control" type="date" required />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Hình ảnh</label>
                <input type="file" name="image" class="form-control mb-2" required accept=".jpg,.jpeg,.png" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>

            <!-- Thêm nút submit ở đây -->
            <button type="submit" class="btn btn-primary">Thêm mới</button>
        </form>
        <div class="form-group mb-3">
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
